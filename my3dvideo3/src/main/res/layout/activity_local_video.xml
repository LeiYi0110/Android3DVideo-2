<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.tdtm.lei.my3dvideo3.LocalVideoActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/toolbar"
            app:popupTheme="@style/AppTheme.PopupOverlay" >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/searchToolBarLayout"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <EditText
                    android:id="@+id/searchEditText"
                    android:layout_width="259dp"
                    android:layout_height="31dp"
                    android:layout_gravity="center"
                    android:background="@drawable/search_text"
                    android:layout_marginLeft="6dp"
                    android:hint="请输入影片名称"
                    android:textColorHint="@color/editTextHint"
                    android:textSize="13dp"
                    android:drawablePadding="15dp"
                    android:drawableLeft="@drawable/search_left_view"
                    android:editable="false"
                    android:focusable="false"

                    />
                <ImageView
                    android:id="@+id/check_image_view"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_gravity="center"
                    android:background="@drawable/check_image"
                    android:layout_marginLeft="10dp"
                    />

                <ImageView
                    android:id="@+id/local_video_image_view"
                    android:layout_width="28dp"
                    android:layout_height="19dp"
                    android:layout_gravity="center"
                    android:background="@drawable/local_video"
                    android:layout_marginLeft="10dp"
                    />


            </LinearLayout>



        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/localVideoList" />





</android.support.design.widget.CoordinatorLayout>

